<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container user user-show">

   <form class="user-form form-horizontal" action="/wallet/<%= user.username %>/sendTx" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop"><%= user.username %>'s result of transaction</h3>

     <fieldset>
      <div class="form-group">
        <label for="account" class="col-sm-3">Account from</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="fromAcc" name="fromAcc" value="<%= fromAcc %>" readonly>
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Account to</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="toAcc" name="toAcc" value="<%= myAccount %>" readonly>
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Amount to send</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="amount" name="amount" value= "<%= amount %>" readonly>
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Result Tx hash</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="Txhash" name="Txhash" value= "<%= result4 %>" readonly>
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Balance after Tx</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="balance" name="balance" value= "<%= balance %>" readonly>
        </div>
       </div>
     </fieldset>
  </form>
  <div class="buttons col-sm-12">
    <a class="btn btn-primary" href="/wallet/<%= user.username %>/new">New Account</a>
    <a class="btn btn-primary" href="https://ropsten.etherscan.io/tx/<%= result4 %>">Check at Etherscan</a>
  </div> <!-- container end -->

 </body>
</html>