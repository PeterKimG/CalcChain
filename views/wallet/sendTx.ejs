<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container user user-show">

    <div class="buttons">
      <a class="btn btn-default" href="/wallet">Back</a>
      <% if(isAuthenticated && wallet.owner && currentUser.id == wallet.owner.id){ %> <!-- 1 -->
       <a class="btn btn-default" href="/<%= wallet.owner %>/edit">go my wallet</a>
      <% } %> <!-- 1 -->
     </div>

   <form class="user-form form-horizontal" action="/wallet/<%= wallet.owner %>/sendTx" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop"><%= user.username %> account</h3>
     <fieldset>
      <div class="form-group">
        <label for="account" class="col-sm-3">Account</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="account" name="account" value="<%= wallet.address %>" readonly>
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">privateKey</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="privateKey" name="privateKey" value="<%= wallet.privateKey %>" readonly>
        </div>
       </div>
     </fieldset>
     <fieldset>
      <div class="form-group">
        <label for="account" class="col-sm-3">Account from</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="fromAcc" name="fromAcc" value="<%= wallet.address %>">
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Account to</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="toAcc" name="toAcc" value="<%= myAccount %>">
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Amount to send</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="amount" name="amount" placeholder="type either">
        </div>
       </div>
       <div class="form-group">
        <label for="privateKey" class="col-sm-3">Message data</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="data" name="data" placeholder="type message you want to send">
        </div>
       </div>
       <div class="buttons submit-container">
        <button type="submit" class="btn btn-default">Send</button>
      </div>
     </fieldset>
    </div>
  </form>
  <div class="buttons col-sm-12">
    <a class="btn btn-primary" href="/wallet/<%= wallet.owner %>/new">New Account</a>
  </div> <!-- container end -->

 </body>
</html>